<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout-trace"
		class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>TRACE</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder>
			<pattern>%d{ISO8601} %5p %t %c{2}:%L - %m%n</pattern>
		</encoder>
	</appender>
	<appender name="stdout-debug"
		class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder>
			<pattern>%d{ISO8601} %5p %t %c{2}:%L - %m%n</pattern>
		</encoder>
	</appender>
	<appender name="stdout-info"
		class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder>
			<pattern>%d{ISO8601} %5p %t %c{2}:%L - %m%n</pattern>
		</encoder>
	</appender>
	<appender name="stderr"
		class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<encoder>
			<pattern>%d{ISO8601} %5p %t %c{2}:%L - %m%n</pattern>
		</encoder>
	</appender>
	<root level="WARN">
		<appender-ref ref="stderr" />
	</root>
	<logger name="com.ostj" level="TRACE">
		<appender-ref ref="stdout-trace" />
		<appender-ref ref="stdout-debug" />
		<appender-ref ref="stdout-info" />
	</logger>
</configuration>
